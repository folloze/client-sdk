{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "declaration": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "dist",
    "rootDirs": [
        "./src",
        "./node_modules/axios-mock-adapter/dist/axios-mock-adapter.js"
    ],
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-unknown-tag-name": "off",
          "no-unknown-event": "warn",
          "no-unused-imports": "off",
          "no-unused-vars": "off",
        }
      }
    ]
  },
  "exclude": [],
  "include": [
    "./src",
    "./node_modules/axios-mock-adapter/dist/axios-mock-adapter.js",
  ]
}
